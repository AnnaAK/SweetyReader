<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:id="@+id/author"
        android:textColor="@color/author_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:textSize="25dp"
        android:text="Author"/>
    <TextView android:id="@+id/title"
              android:textColor="@color/author_color"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_toRightOf="@+id/author"
              android:layout_marginRight="100dp"
              android:textSize="25dp"
              android:text="Title"/>

    <TextView android:id="@+id/description"
        android:textColor="@color/description_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:layout_below="@+id/author"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Description..."/>
    <TextView android:id="@+id/rating_your"
        android:textColor="@color/rating_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/description"
        android:text="Ваша оценка:"/>
    <TextView android:id="@+id/rating_book"
        android:textColor="@color/rating_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/description"
        android:text="Рейтинг книги:"/>
    <TextView
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:id="@+id/rating_your_button"
        android:textColor="#ffffff"
        android:background="@color/author_color"
        android:layout_below="@+id/description"
        android:layout_marginLeft="150dp" />
    <TextView
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:id="@+id/rating_book_button"
        android:textColor="#ffffff"
        android:background="@color/author_color"
        android:layout_below="@+id/description"
        android:layout_marginLeft="400dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cover_book"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="620dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/cover_not_available2" />

</RelativeLayout>