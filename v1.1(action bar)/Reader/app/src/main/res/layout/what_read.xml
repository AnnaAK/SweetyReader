<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подобрать"
        android:id="@+id/button11"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#1084b3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Подбирает новые книги на основе книг в &quot;Моей библиотеке&quot;"
        android:id="@+id/textView26"
        android:textColor="#1084b3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:layout_alignLeft="@+id/button11"
        android:layout_alignStart="@+id/button11" />
</RelativeLayout>